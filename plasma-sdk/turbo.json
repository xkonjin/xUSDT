{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "NEXT_PUBLIC_PRIVY_APP_ID",
    "NEXT_PUBLIC_APP_URL",
    "NEXT_PUBLIC_PLASMA_CHAIN_ID",
    "NEXT_PUBLIC_PLASMA_RPC",
    "NEXT_PUBLIC_MERCHANT_ADDRESS",
    "NEXT_PUBLIC_GEMINI_API_KEY",
    "DATABASE_URL",
    "PRIVY_APP_SECRET",
    "RELAYER_ADDRESS",
    "RELAYER_PRIVATE_KEY",
    "MERCHANT_ADDRESS",
    "API_AUTH_SECRET",
    "RESEND_API_KEY",
    "RESEND_FROM_EMAIL"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "clean": {
      "cache": false
    }
  }
}
