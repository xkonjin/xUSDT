{
  "name": "@plasma-pay/ui",
  "version": "0.1.0",
  "private": true,
  "description": "Shared UI components for Plasma apps",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --external react --external next/image --external next",
    "dev": "tsup src/index.ts --format cjs,esm --dts --external react --watch",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "next": ">=14.0.0"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@rive-app/react-canvas": "^4.25.3",
    "clsx": "^2.1.0",
    "framer-motion": "^12.26.1",
    "lucide-react": "^0.468.0",
    "tailwind-merge": "^2.2.0",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/react": "^14.2.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "next": "^14.2.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "ts-jest": "^29.1.0",
    "tsup": "^8.5.1",
    "typescript": "^5.0.0"
  }
}
