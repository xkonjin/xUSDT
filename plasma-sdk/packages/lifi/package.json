{
  "name": "@plasma-pay/lifi",
  "version": "1.0.0",
  "description": "LiFi cross-chain swap module for Plasma Pay - accept any currency, get USDT0",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src/",
    "test": "vitest run"
  },
  "keywords": [
    "plasma",
    "lifi",
    "cross-chain",
    "swap",
    "bridge",
    "usdt",
    "defi"
  ],
  "author": "Plasma Team",
  "license": "MIT",
  "dependencies": {
    "@lifi/sdk": "^3.0.0",
    "viem": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "viem": ">=2.0.0"
  }
}
