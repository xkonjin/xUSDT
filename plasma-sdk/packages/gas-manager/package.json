{
  "name": "@plasma-pay/gas-manager",
  "version": "1.0.0",
  "description": "Auto gas management for Plasma Pay - ensures agents always have XPL for self-sovereign operation",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src/",
    "test": "vitest run"
  },
  "keywords": [
    "plasma",
    "gas",
    "xpl",
    "auto-refill",
    "self-sovereign"
  ],
  "author": "Plasma Team",
  "license": "MIT",
  "dependencies": {
    "viem": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "viem": ">=2.0.0",
    "@plasma-pay/lifi": ">=1.0.0"
  }
}
