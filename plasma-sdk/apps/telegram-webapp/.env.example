# Telegram WebApp Environment Variables
# Copy this to .env.local and fill in your values

# =============================================================================
# REQUIRED - API Configuration
# =============================================================================

# URL to the Plasma Venmo API (backend)
NEXT_PUBLIC_API_URL="https://plasma-venmo.vercel.app"

# =============================================================================
# REQUIRED - Telegram Bot Authentication
# =============================================================================

# Bot token from @BotFather (KEEP SECRET - DO NOT EXPOSE TO CLIENT)
TELEGRAM_BOT_TOKEN=""

# =============================================================================
# OPTIONAL - Telegram Bot
# =============================================================================

# Bot username (without @)
NEXT_PUBLIC_BOT_USERNAME="PlasmaPayBot"

# =============================================================================
# OPTIONAL - Analytics
# =============================================================================

NEXT_PUBLIC_POSTHOG_KEY=""
