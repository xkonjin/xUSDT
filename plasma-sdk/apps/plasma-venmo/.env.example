# Plasma Venmo Environment Variables
# Copy this to .env.local and fill in your values

# =============================================================================
# REQUIRED - Core Configuration
# =============================================================================

# Database URL (SQLite for dev, PostgreSQL for production)
DATABASE_URL="file:./prisma/plasma-pay.db"

# Relayer private key (for submitting gasless transactions)
# NEVER commit this value!
RELAYER_PRIVATE_KEY="0x..."

# Merchant address to receive payments
MERCHANT_ADDRESS="0x..."

# =============================================================================
# REQUIRED - Authentication (Privy)
# =============================================================================

# Privy App ID from privy.io dashboard
NEXT_PUBLIC_PRIVY_APP_ID="your-privy-app-id"

# Privy App Secret (server-side only)
PRIVY_APP_SECRET="your-privy-app-secret"

# =============================================================================
# OPTIONAL - External Services
# =============================================================================

# Resend API for email notifications
# Get from resend.com
RESEND_API_KEY=""
RESEND_FROM_EMAIL="Plasma Venmo <noreply@plasma.to>"

# PostHog Analytics
NEXT_PUBLIC_POSTHOG_KEY=""
NEXT_PUBLIC_POSTHOG_HOST="https://us.i.posthog.com"

# =============================================================================
# OPTIONAL - Plasma Network Configuration (defaults provided)
# =============================================================================

# Plasma RPC URL (default: https://rpc.plasma.to)
PLASMA_RPC="https://rpc.plasma.to"

# USDT0 token address on Plasma
USDT0_ADDRESS="0xB8CE59FC3717ada4C02eaDF9682A9e934F625ebb"

# =============================================================================
# OPTIONAL - App Configuration
# =============================================================================

# Public app URL (used in emails, claim links, etc.)
NEXT_PUBLIC_APP_URL="http://localhost:3002"

# Enable gas sponsorship (default: true)
ENABLE_GAS_SPONSORSHIP="true"

# Gas sponsorship limits
GAS_DAILY_TX_LIMIT="10"
GAS_DAILY_USD_LIMIT="10000"

# Referral reward amount in USD (default: 0.10)
REFERRAL_REWARD_AMOUNT="0.10"
