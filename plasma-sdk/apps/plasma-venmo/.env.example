# =============================================================================
# Plenmo - Production Environment Variables
# =============================================================================
# Copy this to .env.local for local development
# Set these in Vercel dashboard for production

# -----------------------------------------------------------------------------
# Privy Authentication (REQUIRED)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_PRIVY_APP_ID=your_privy_app_id
PRIVY_APP_SECRET=your_privy_app_secret

# -----------------------------------------------------------------------------
# Database (PostgreSQL for production, SQLite for local)
# -----------------------------------------------------------------------------
# For Vercel, use Vercel Postgres or external DB like Supabase/PlanetScale
DATABASE_URL=postgresql://user:pass@host:5432/dbname

# -----------------------------------------------------------------------------
# Relayer Wallet (for gasless transactions)
# See docs/relayer-wallet-setup.md for detailed configuration guide
# -----------------------------------------------------------------------------
RELAYER_ADDRESS=0x...
RELAYER_PRIVATE_KEY=0x...
RELAYER_WALLET_LABEL=primary

# Relayer Alerts (optional - get notified when balance is low)
# RELAYER_ALERT_WEBHOOK=https://hooks.slack.com/services/...
# RELAYER_MIN_NATIVE_BALANCE=0.01
# RELAYER_MIN_USDT0_BALANCE=10

# Wallet Rotation (optional - for high-volume production)
# Format: label1:0xkey1,label2:0xkey2
# RELAYER_WALLETS=primary:0x...,backup:0x...
# RELAYER_ROTATION_STRATEGY=highest-balance

# -----------------------------------------------------------------------------
# Merchant Wallet (payment recipient)
# -----------------------------------------------------------------------------
MERCHANT_ADDRESS=0x...
NEXT_PUBLIC_MERCHANT_ADDRESS=0x...

# -----------------------------------------------------------------------------
# API Security
# -----------------------------------------------------------------------------
API_AUTH_SECRET=generate_a_secure_random_string

# -----------------------------------------------------------------------------
# Email (Resend)
# -----------------------------------------------------------------------------
RESEND_API_KEY=re_...
RESEND_FROM_EMAIL="Plenmo <noreply@yourdomain.com>"

# -----------------------------------------------------------------------------
# App URL (set to your Vercel domain)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_URL=https://plenmo.vercel.app

# -----------------------------------------------------------------------------
# Plasma Chain (these are public constants)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_PLASMA_CHAIN_ID=9745
NEXT_PUBLIC_PLASMA_RPC=https://rpc.plasma.to

# -----------------------------------------------------------------------------
# AI Assistant (optional)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_GEMINI_API_KEY=your_gemini_api_key

# -----------------------------------------------------------------------------
# Analytics - PostHog (optional but recommended)
# -----------------------------------------------------------------------------
# Get your key from https://posthog.com - free tier available
NEXT_PUBLIC_POSTHOG_KEY=phc_...
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

# -----------------------------------------------------------------------------
# Card Payments - Transak (optional)
# -----------------------------------------------------------------------------
# Get API key from https://transak.com
# NEXT_PUBLIC_TRANSAK_API_KEY=your_transak_api_key
