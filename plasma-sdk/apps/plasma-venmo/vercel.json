{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "nextjs",
  "buildCommand": "cd ../../packages/db && pnpm prisma generate && cd ../../apps/plasma-venmo && rm -rf .turbo && pnpm turbo build --filter=@plasma-pay/venmo --force",
  "outputDirectory": ".next",
  "installCommand": "pnpm install",
  "devCommand": "pnpm dev",
  "env": {
    "NEXT_PUBLIC_APP_URL": "https://plenmo.vercel.app",
    "NEXT_PUBLIC_PLASMA_CHAIN_ID": "9745",
    "NEXT_PUBLIC_PLASMA_RPC": "https://rpc.plasma.to",
    "NODE_ENV": "production"
  },
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ]
}
